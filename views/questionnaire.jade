body
  h1 Please fill the questionnaire

  div
  form(action='/do_insert', method='post')
    div
      label(for='name') Name
        input(id='name', type='text', name='name')
    div
      label(for='pwd') Password
        input(type='password', name='pwd')
    div
      label(for='birthdate') Birthdate as YYYYMMDD if date-picker is broken
      br
      input(type='date', name='birthdate')
    div
      label(for='male') Male
        input(type='radio', value='male', name='sex')
      label(for='female') Female
        input(type='radio', value='female', name='sex')
    div
      label(for='answer') WTF
        textarea(name='answer', type='text', placeholder='TTF')
    div
      label(for="doctorSex") Doctor's sex? <!--emacs' syntax-colouring sucks-->
        select(name='doctorSex')
          option Male
          option Female
          option Doesn't matter<!--'-->
    // div
    //   label(for='
          
    input(type='submit', value='Submit')
        
