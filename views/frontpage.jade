body
  div(class="wrap")
    div(class="section sTop")
      div(class="inner")
        h1(class="title") PsyLink
        h2(class="subtitle") Find your psychotherapist
        img(src="/resources/logo_here.png", class="top-logo")

    div(class="subMenu ")
      div(class="inner")
        a(href="#sTop" class="subNavBtn")
          | Home
